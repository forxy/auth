<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns='http://www.springframework.org/schema/beans'
       xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer"
          p:location="classpath:/spring/auth.permissions-redis.properties"/>


    <import resource="classpath:spring/permissions-redis-plugin-spring-context.xml"/>

    <bean id="eventBus" class="com.google.common.eventbus.EventBus"/>

    <bean id="permissionDAO.impl.redis" parent="permissionDAO.impl.redis.base"
          p:eventBus-ref="eventBus"/>

</beans>